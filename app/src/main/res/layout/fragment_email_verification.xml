<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <TextView
        android:id="@+id/tvVerificationMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kami telah mengirimkan email verifikasi ke alamat email Anda. Silakan cek email dan verifikasi sebelum melanjutkan."
        android:textAlignment="center"
        android:textSize="16sp"
        android:padding="16dp" />

    <Button
        android:id="@+id/btnBackToLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali ke Login"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btnCheckVerification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sudah Verifikasi?"
        android:layout_marginTop="16dp" />

</LinearLayout>
