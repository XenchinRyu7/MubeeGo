<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:paddingBottom="8dp">

            <!-- Now Showing Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">
                <TextView
                    android:id="@+id/tv_now_showing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Now Showing"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/onBackground"/>
                <TextView
                    android:id="@+id/btn_see_more_now_showing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See more"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingStart="8dp"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_now_showing"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:scrollbars="none"
                tools:listitem="@layout/item_poster_card" />

            <!-- Popular Section (vertical, max 5, with side space) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">
                <TextView
                    android:id="@+id/tv_popular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Popular"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/onBackground"/>
                <TextView
                    android:id="@+id/btn_see_more_popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See more"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingStart="8dp"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_popular"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:scrollbars="none"
                tools:listitem="@layout/item_movies_tvshows"/>

            <!-- TV Series Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <TextView
                    android:id="@+id/tv_tv_series"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tv Series"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/onBackground"/>
                <TextView
                    android:id="@+id/btn_see_more_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See more"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:paddingStart="8dp"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tv_series"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:scrollbars="none"
                tools:listitem="@layout/item_poster_card"
                android:orientation="horizontal" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>